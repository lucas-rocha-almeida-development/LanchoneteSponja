@model CarrinhoCompraViewModel
<!--Verificação se existe item no carrinho-->
@if (Model.CarrinhoCompra.CarrinhoCompraItems.Count > 0)
{
    <a asp-controller="CarrinhoCompra" asp-action="Index"><!--Usuario clicando na imagem ira acionar a Action Index-->

        <span><img src="/images/cart-5-16.ico" /></span>
        <span style="color:white">
            @Model.CarrinhoCompra.CarrinhoCompraItems.Count
        </span>

    </a>

}