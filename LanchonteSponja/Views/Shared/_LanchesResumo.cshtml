@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4 ">
    <!--Inicio da div-->
    <p> <img src="@Model.ImgagemUrl" class="img-fluid" /> </p>
    <h3>Preço: @Model.Preco.ToString("c")</h3>
    <h4>
        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
    </h4>
    <p>@Model.DescricaoCurta</p>
    <div> <!--Div com Botão Adiconar-->
        <p class="button">
            <a class="btn btn-primary id="cartButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra"
            asp-route-LancheId="@Model.LancheId">Incluir no Carrinho</a>
        </p>
    </div><!--Div com Botão Adiconar-->


</div> <!--Fim da div-->