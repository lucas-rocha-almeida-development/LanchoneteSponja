@model Lanche
<div class="container"><!--Inicio div container-->
    <div class="row">
        <!--Inicio div row-->

        <div class="card"><!--Inicio do Card-->
            <div class="text-center">
                <img src="@Model.ImgagemUrl" class="img-fluid" alt="" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2> <!--Titulo  do cartão-->
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p> <!--Descrição do lanche-->

                <p class="btn btn-group align-content-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra"
                    asp-route-lanceId="@Model.LancheId">Adicionar @Model.Nome ao carrinho</a>

                </p>






            </div>



        </div><!--Fim do Card-->
       

    </div><!--Fim div row-->
</div><!--Fim div container-->